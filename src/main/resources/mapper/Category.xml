<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.thylovecode.librarybackend.mapper.CategoryMapper">

    <resultMap id="categoryMap" type="com.thylovecode.librarybackend.entity.Category">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="remark" property="remark"/>
        <result column="pid" property="pid"/>
        <result column="createtime" property="createtime"/>
        <result column="updatetime" property="updatetime"/>
        <collection property="children" column="id" ofType="com.thylovecode.librarybackend.entity.Category"
                    select="selectByPid"></collection>
    </resultMap>

    <select id="selectByPid" resultType="com.thylovecode.librarybackend.entity.Category">
        select * from category where pid = #{id}
    </select>

    <select id="listByCondition" resultMap="categoryMap">
        select DISTINCT c1.* from category c1
        left join category c2
        on c1.id = c2.pid
        <where>
            isnull(c1.pid)
            <if test="name != null and name != ''">
                and c1.name like concat('%', #{ name }, '%') or c2.name like concat('%', #{name}, '%')
            </if>
        </where>
        order by id desc
    </select>

    <insert id="save">
        insert into category(name,remark,pid) values(#{name},#{remark},#{pid})
    </insert>
    <update id="updateById">
        update category set name = #{name}, remark = #{remark}, updatetime = #{updatetime} where id = #{id}
    </update>
    <delete id="delete">
        delete from category where id = #{id}
    </delete>
    <select id="list" resultType="com.thylovecode.librarybackend.entity.Category">
        select * from category
    </select>
    <select id="getById" resultType="com.thylovecode.librarybackend.entity.Category">
        select * from category where id = #{id}
    </select>
</mapper>

