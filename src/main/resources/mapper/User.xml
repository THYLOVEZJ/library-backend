<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thylovecode.librarybackend.mapper.UserMapper">
    <insert id="save">
        insert into user(username,age,sex,phone,address,password)
        values(#{username},#{age},#{sex},#{phone},#{address},#{password})
    </insert>
    <update id="updateUser">
        update user set age = #{age},sex = #{sex},phone = #{phone},address = #{address},password = #{password} where id
        = #{id}
    </update>
    <delete id="delete">
        delete from user where id = #{id}
    </delete>
    <select id="listUser" resultType="com.thylovecode.librarybackend.entity.User">
        select * from user
    </select>
    <select id="listByCondition" resultType="com.thylovecode.librarybackend.entity.User">
        select * from user
        <where>
            <if test="username != null and username != ''">
                username like concat('%', #{ username }, '%')
            </if>
            <if test="phone != null and phone != ''">
                and phone like concat('%', #{ phone }, '%')
            </if>
        </where>
    </select>
    <select id="getById" resultType="com.thylovecode.librarybackend.entity.User">
        select * from user where id = #{id}
    </select>
</mapper>